{
	"compilerOptions": {
		"module": "esNext",
		"target": "es5",
		"moduleResolution": "node",
		"baseUrl": "src",
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"sourceMap": true,
		"outDir": "build-client",
		"jsx": "react",
		"allowJs": true,
		"lib": ["es6", "es7", "dom"],
	},
	"exclude": [
		"node_modules",
		"test"
	]
}